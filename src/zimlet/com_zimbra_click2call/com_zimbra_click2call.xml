<zimlet name="com_zimbra_click2call" version="0.2"  label="${msg.label}" description="${msg.description}">
	<include>ZmClick2Call.js</include>
	<include>base64.js</include>
	<include>ZmClick2CallProviderAPIs.js</include>
	<include>ZmClick2CallDlg.js</include>
	<include>ZmClick2CallFromPhoneDlg.js</include>
    <include>ZmClick2CallVoicePINDlg.js</include>
	<include>templates/ZmClick2Call.template.js</include>
	<includeCSS>ZmClick2Call.css</includeCSS>
	<handlerObject>ZmClick2CallZimlet</handlerObject>
	<contentObject type="phone">
		<matchOn>
            <!-- Match total 10-22 chars that start with + or +number and end with number
                to ensure we match most US and intl Phone numbers including "+"
                Also have word-boundary inside to ignore partial-matches
            -->
			<regex attrs="g">\+?\b\d([0-9\(\)\.\s\-]){8,20}\d\b</regex>
		</matchOn>
	</contentObject>
</zimlet>
